    "@mdx-js/react": "^2.1.2",
    "@next/mdx": "^12.2.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.4",
    "@testing-library/jest-dom": "^6.4.5",
