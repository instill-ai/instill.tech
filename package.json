    "gsap": "^3.10.4",
    "intersection-observer": "^0.12.2",
    "markdown-to-jsx": "^7.3.2",
    "next": "^14.2.3",
    "next-i18next": "^15.3.0",
    "next-mdx-remote": "4.2.0",
    "nextjs-toploader": "^1.6.4",
    "node-html-parser": "^5.3.3",
