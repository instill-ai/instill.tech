  "lint-staged": {
    "*.{ts,tsx}": [
      "pnpm run prettier:fix",
      "eslint --fix",
      "pnpm run test --passWithNoTests"
    ],
    "*.stories.{ts,tsx}": [
      "npm run prettier:fix",
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.1.4",
  "version": "1.50.3",
  "pnpm": {
    "overrides": {
      "braces": "3.0.3"
    }
  },
  "nextBundleAnalysis": {
    "budget": null,
    "budgetPercentIncreaseRed": 40,
    "minimumChangeThreshold": 0,
    "showDetails": true
  }
