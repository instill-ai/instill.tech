{
  "name": "product-website",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect' next dev -H localhost -p 3000",
    "build": "next build && pnpm run postbuild",
    "lint": "next lint",
    "start": "next start",
    "export": "next export",
    "storybook": "start-storybook -s ./public -p 6006",
    "build-storybook": "build-storybook -s ./public -o out -c .storybook",
    "analyze": "cross-env ANALYZE=true next build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server next build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser next build",
    "prepare": "husky install",
    "prettier:fix": "prettier --write",
    "prettier:check": "prettier --check",
    "test": "jest",
    "test:watch": "jest --watch",
    "postbuild": "next-sitemap"
  },
  "dependencies": {
    "@code-hike/mdx": "^0.7.2",
    "@instill-ai/design-system": "^0.0.104",
    "@mailchimp/mailchimp_marketing": "^3.0.72",
    "axios": "^0.21.4",
    "classnames": "^2.3.1",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "gray-matter": "^4.0.3",
    "gsap": "^3.9.1",
    "intersection-observer": "^0.12.0",
    "next": "^12.2.4",
    "node-html-parser": "^5.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^7.0.1",
    "react-select": "^5.4.0",
    "rehype-raw": "^6.1.1",
    "remark-gfm": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@mdx-js/loader": "^2.1.2",
    "@mdx-js/react": "^2.1.2",
    "@next/env": "^12.2.3",
    "@next/mdx": "^12.2.3",
    "@playwright/test": "^1.17.2",
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addons": "^6.5.9",
    "@storybook/builder-webpack5": "^6.5.9",
    "@storybook/client-api": "^6.5.9",
    "@storybook/manager-webpack5": "^6.5.9",
    "@storybook/react": "^6.5.9",
    "@tailwindcss/typography": "^0.5.2",
    "@testing-library/dom": "^8.16.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/gtag.js": "^0.0.8",
    "@types/jest": "^28.1.6",
    "@types/mailchimp__mailchimp_marketing": "^3.0.2",
    "@types/node": "^16.9.6",
    "@types/react": "^17.0.24",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@types/webpack-bundle-analyzer": "^4.4.1",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.2",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-plugin-storybook": "^0.6.1",
    "eslint-plugin-testing-library": "^5.0.3",
    "hastscript": "^7.0.2",
    "husky": "^7.0.0",
    "jest": "^27.4.7",
    "lint-staged": "^11.2.3",
    "next-sitemap": "^3.1.16",
    "postcss": "^8.4.5",
    "prettier": "2.4.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-slug": "^5.0.1",
    "require-from-string": "^2.0.2",
    "storybook-addon-next-router": "^4.0.0",
    "tailwindcss": "^3.0.13",
    "typescript": "^4.4.3",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "pnpm run prettier:fix",
      "eslint --fix",
      "pnpm run test --passWithNoTests"
    ],
    "*.stories.{ts,tsx}": [
      "npm run prettier:fix",
      "eslint --fix"
    ]
  },
  "version": "1.8.1"
}
